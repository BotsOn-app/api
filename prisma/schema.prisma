generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  name       String
  avatarUrl  String
  extensions Extension[] @relation("extension")
}

model Extension {
  id          String    @id @default(cuid())
  name        String    @db.VarChar(50)
  description String
  author      User      @relation("extension", fields: [authorId], references: [id])
  authorId    String
  versions    Version[] @relation("version")
  downloads   Int
  bannerUrl   String
  verified    Boolean
  source      String
}

model Version {
  semver       String
  commit       String
  active       Boolean
  link         String?
  checksum     String?
  Extensions   Extension @relation("version", fields: [extensionsId], references: [id])
  extensionsId String

  @@id([semver, extensionsId])
}
